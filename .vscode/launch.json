{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Pico",
            "request": "launch",
            "type": "cortex-debug",
            "gdbPath": "gdb-multiarch",
            "cwd": "${workspaceRoot}",
            "executable": "${workspaceFolder}/target/thumbv8m.main-none-eabihf/debug/rp2350-embassy-template",
            "servertype": "openocd",
            "configFiles": [
                            "interface/cmsis-dap.cfg",
                            "target/rp2350.cfg",],
            "preLaunchTask": "Build binary",
            "device": "RP2350",
            "gdbTarget": "localhost:50000",
            "svdFile": "${env:PICO_SDK_PATH}/src/rp2350/hardware_regs/RP2350.svd",
            "openOCDLaunchCommands": [
                "adapter speed 5000"
            ],
            "showDevDebugOutput": "none",
            "postLaunchCommands": [
                "monitor rtt server start 8765 0",
                // should span the *right* part of RAM
                "monitor rtt setup 0x20067934 0x30 \"SEGGER RTT\"",
                "monitor rtt start",
            ],
            //enable livewatch
            "liveWatch": {
                "enabled": true,
                "samplesPerSecond": 4
            },
            "runToEntryPoint": "main" // This will run the program to the main function
        },
        {
            "cwd": "${workspaceRoot}",
            "name": "Attach Debug",
            "request": "attach",
            "type": "cortex-debug",
            "servertype": "external",
            "gdbTarget": ":3333",
            // TODO adjust all these to fit your system, program and hardware
            "executable": "./target/thumbv8m.main-none-eabihf/debug/rp2350-embassy-template",
            "gdbPath": "gdb-multiarch", // or gdb or multiarch-gdb
        }
    ]
}